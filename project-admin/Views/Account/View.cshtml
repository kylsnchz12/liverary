@model project_admin.Models.UpdateUserViewModel

<div class="content-wrapper">
    <div class='left-details'>
        <div class="crud-logo" style="background-image: url('/images/crud_logo.png');"></div>
            <a asp-area="" asp-controller="Account" asp-action="UserList">
                <p class="logout">Back</p>
            </a>
    </div>
    <div class="right-details-view">
        <h1 class="edit-title">Edit User</h1>
            <form method="post" action="View" class="edit-user">
                <label id="mylabel" for="username">UserID</label>
                <input id="myInput" asp-for="UserID" readonly type="text" id="userID" name="userID" required>
                <label id="mylabel" for="username">Username</label>
                <input id="myInput" asp-for="Username" type="text" id="username" name="username" required>
                <label id="mylabel" for="password">Password</label>
                <input id="myInput" asp-for="Password" type="password" id="password" name="password" required>

                <br>

            <button id="mybutton-update" type="submit" id="create">Update</button>
            <br>
            <div>
                <br>
                <button id="mybutton-delete" type="submit" class="btn btn-danger" asp-action="Delete" asp-controller="Account">Delete</button>
            </div>
        </form>
    </div>
</div>
